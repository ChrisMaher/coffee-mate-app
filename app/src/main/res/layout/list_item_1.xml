<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/title"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_below="@+id/votes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/brandlogo"
            android:layout_toStartOf="@+id/brandlogo"
            android:maxLines="2"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/brandlogo"
            android:background="#cecec3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:id="@+id/votes"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#fe0000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:id="@+id/price"
            android:padding="5dp"
            android:minLines="1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/votes"
            android:layout_toEndOf="@+id/votes" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="retailer"
            android:id="@+id/retailer"
            android:layout_below="@+id/title"
            android:minLines="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/brandlogo"
            android:layout_toStartOf="@+id/brandlogo"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#8C662E"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>

</LinearLayout>